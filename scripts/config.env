# 🚀 Configuración del Script de Bootstrap de ArgoCD
# Modifica estas variables según tu entorno

# Repositorio de GitHub
REPO_URL="https://github.com/fede-r1c0/homelab"

# Namespace de ArgoCD
ARGOCD_NAMESPACE="argocd"

# 🔌 Configuración de ArgoCD
ARGOCD_URL="http://192.168.68.100"
ARGOCD_HTTP_PORT="80"
ARGOCD_HTTPS_PORT="443"
ARGOCD_LOCAL_PORT="8000"

# Nombre de la aplicación bootstrap
BOOTSTRAP_APP_NAME="homelab-bootstrap"

# Timeout para esperar que ArgoCD esté listo (en segundos)
ARGOCD_READY_TIMEOUT=300

# Tiempo de espera después de crear la aplicación (en segundos)
APP_SYNC_WAIT=15

# Colores para output (true/false)
ENABLE_COLORS=true

# Modo verbose (true/false)
VERBOSE=false

# Auto-sync después de crear la aplicación (true/false)
AUTO_SYNC=true

# Crear backup antes de proceder (true/false)
CREATE_BACKUP=false
